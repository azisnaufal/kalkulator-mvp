<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainactivity.MainActivity" tools:layout_editor_absoluteY="81dp">

    <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="72dp"
                android:id="@+id/tvResult"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@android:color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                android:gravity="end"
                android:maxLength="16"
                android:scrollHorizontally="true"/>
    </HorizontalScrollView>

    <Button
            android:text="7"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/hsv"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp"/>

    <Button
            android:text="4"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn4"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toBottomOf="@+id/btn7"
            app:layout_constraintStart_toStartOf="@+id/btn7"
            android:textSize="36sp"/>
    <Button
            android:text="1"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn1"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="@+id/btn4"
            app:layout_constraintTop_toBottomOf="@+id/btn4" android:textSize="36sp"/>
    <Button
            android:text="0"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn0"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toBottomOf="@+id/btn1"
            app:layout_constraintStart_toStartOf="@+id/btn1" android:textSize="36sp"/>

    <Button
            android:text="."
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btnComma"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toEndOf="@+id/btn0"
            app:layout_constraintTop_toTopOf="@+id/btn0"
            app:layout_constraintBottom_toBottomOf="@+id/btn0"
            app:layout_constraintVertical_bias="0.0"
            android:textSize="36sp"/>

    <Button
            android:text="="
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btnEquals"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintBottom_toBottomOf="@+id/btnComma"
            app:layout_constraintTop_toTopOf="@+id/btnComma"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnComma"
            android:textSize="36sp"/>

    <Button
            android:text="2"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn2"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toTopOf="@+id/btn1"
            app:layout_constraintBottom_toBottomOf="@+id/btn1"
            app:layout_constraintStart_toEndOf="@+id/btn1"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="3"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn3"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintBottom_toBottomOf="@+id/btn2"
            app:layout_constraintTop_toTopOf="@+id/btn2"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="5"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn5"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toTopOf="@+id/btn4"
            app:layout_constraintBottom_toBottomOf="@+id/btn4"
            app:layout_constraintStart_toEndOf="@+id/btn4"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="6"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn6"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintBottom_toBottomOf="@+id/btn5"
            app:layout_constraintTop_toTopOf="@+id/btn5"
            app:layout_constraintStart_toEndOf="@+id/btn5"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="รท"
            android:layout_width="86dp"
            android:layout_height="72dp"
            android:id="@+id/btnDivide"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/btnBackspace"
            app:layout_constraintStart_toStartOf="@+id/btnBackspace"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/btnBackspace"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="x"
            android:layout_width="86dp"
            android:layout_height="72dp"
            android:id="@+id/btnTimes"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/btnDivide"
            app:layout_constraintStart_toStartOf="@+id/btnDivide"
            app:layout_constraintEnd_toEndOf="@+id/btnDivide"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="-"
            android:layout_width="86dp"
            android:layout_height="72dp"
            android:id="@+id/btnMinus"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/btnTimes"
            app:layout_constraintStart_toStartOf="@+id/btnTimes"
            app:layout_constraintEnd_toEndOf="@+id/btnTimes"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="+"
            android:layout_width="86dp"
            android:layout_height="72dp"
            android:id="@+id/btnPlus"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/btnMinus"
            app:layout_constraintStart_toStartOf="@+id/btnMinus"
            app:layout_constraintEnd_toEndOf="@+id/btnMinus"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnEquals"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="8"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn8"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toTopOf="@+id/btn7"
            app:layout_constraintBottom_toBottomOf="@+id/btn7"
            app:layout_constraintStart_toEndOf="@+id/btn7"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:text="9"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:id="@+id/btn9"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toTopOf="@+id/btn8"
            app:layout_constraintBottom_toBottomOf="@+id/btn8"
            app:layout_constraintStart_toEndOf="@+id/btn8"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.0"
            />

    <ImageButton
            android:layout_width="86dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_backspace_white_24dp"
            android:id="@+id/btnBackspace"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintTop_toTopOf="@+id/btn9"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn9"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            />
</android.support.constraint.ConstraintLayout>